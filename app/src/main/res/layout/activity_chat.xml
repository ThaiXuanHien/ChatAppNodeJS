<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/edtMessage">

    </androidx.recyclerview.widget.RecyclerView>


    <EditText
        android:id="@+id/edtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@id/txtSendMessage"
        android:layout_toLeftOf="@id/txtSendMessage"
        android:layout_toEndOf="@id/imgPhoto"
        android:layout_toRightOf="@id/imgPhoto"
        android:background="@drawable/bg_edittext"
        android:padding="8dp"
        android:text="Nhập tin nhắn ..."
        android:textSize="16sp">

    </EditText>

    <TextView
        android:id="@+id/txtSendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:text="Gửi"
        android:textColor="@color/purple_500"
        android:textSize="16sp"
        android:textStyle="bold">

    </TextView>

    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_insert_photo_24">

    </ImageView>
</RelativeLayout>